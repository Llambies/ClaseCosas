<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.adrian.calculadoraevent.calculatorevent.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="32.0" prefWidth="240.0">
        <children>
            <Label text="1st Number" />
            <TextField fx:id="firstNumberField" promptText="Ej: 10.5" />
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="32.0" prefWidth="240.0">
        <children>
            <Label text="Choose operation" />
            <ComboBox fx:id="operationCombo" prefWidth="80.0" promptText="Operación">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Suma (+)" />
                        <String fx:value="Resta (-)" />
                        <String fx:value="Multiplicación (×)" />
                        <String fx:value="División (÷)" />
                    </FXCollections>
                </items>
            </ComboBox>
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="82.0" prefHeight="32.0" prefWidth="240.0">
        <children>
            <Label text="2nd Number" />
            <TextField fx:id="secondNumberField" promptText="Ej: 2" />
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="30.0" prefHeight="32.0" prefWidth="240.0">
        <children>
            <Button mnemonicParsing="false" text="Go" onAction="#onGo" />
        </children>
    </HBox>
    <HBox alignment="CENTER" layoutX="30.0" layoutY="186.0" prefHeight="32.0" prefWidth="240.0">
        <children>
            <Label text="Result:" />
            <TextField fx:id="resultField" editable="false" promptText="Resultado..." />
        </children>
    </HBox>
</VBox>
