<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.llambies.PrimaryController">
   <padding><Insets bottom="20" left="20" right="20" top="20"/></padding>
   <children>
      <Label text="Parkineo - Gestión de plazas" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
      <TableView fx:id="tablaPlazas" prefHeight="200" onMouseClicked="#onSeleccionarPlaza">
         <columns>
            <TableColumn fx:id="colNumero" text="Número" prefWidth="80"/>
            <TableColumn fx:id="colPlanta" text="Planta" prefWidth="80"/>
            <TableColumn fx:id="colTipo" text="Tipo" prefWidth="150"/>
         </columns>
      </TableView>
      <GridPane hgap="10" vgap="8">
         <Label text="Número:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
         <TextField fx:id="txtNumero" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
         <Label text="Planta:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
         <TextField fx:id="txtPlanta" prefWidth="100" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
         <Label text="Tipo:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
         <ComboBox fx:id="comboTipo" prefWidth="150" promptText="Selecciona tipo" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
      </GridPane>
      <HBox spacing="10" alignment="CENTER">
         <Button text="Refrescar" onAction="#refrescarPlazas"/>
         <Button text="Insertar" onAction="#insertarPlaza"/>
         <Button text="Actualizar" onAction="#actualizarPlaza"/>
         <Button text="Borrar" onAction="#borrarPlaza"/>
         <Button text="Cerrar sesión" onAction="#cerrarSesion"/>
      </HBox>
      <Label fx:id="lblEstado" text="" wrapText="true"/>
   </children>
</VBox>
