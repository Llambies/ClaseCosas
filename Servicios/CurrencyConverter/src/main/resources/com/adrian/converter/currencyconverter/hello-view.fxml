<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.ToggleGroup?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.adrian.converter.currencyconverter.HelloController">
   <MenuBar>
     <menus>
         <Menu mnemonicParsing="false" text="File">
             <items>
                 <RadioMenuItem selected="true" mnemonicParsing="false" text="EUR -> USD">
                     <toggleGroup>
                         <ToggleGroup fx:id="conversiones"/>
                     </toggleGroup>
                 </RadioMenuItem>
                 <RadioMenuItem mnemonicParsing="false" text="EUR -> GBP" toggleGroup="$conversiones"/>
                 <RadioMenuItem mnemonicParsing="false" text="USD -> EUR" toggleGroup="$conversiones"/>
                 <RadioMenuItem mnemonicParsing="false" text="USD -> GBP" toggleGroup="$conversiones"/>
                 <RadioMenuItem mnemonicParsing="false" text="GBP -> EUR" toggleGroup="$conversiones"/>
                 <RadioMenuItem mnemonicParsing="false" text="GBP -> USD" toggleGroup="$conversiones"/>
             </items>
         </Menu>
     </menus>
   </MenuBar>
    <TextField fx:id="cantidadAConvertir" onKeyReleased="#onTextChanged"/>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Text" fx:id="resultado" />
</VBox>
