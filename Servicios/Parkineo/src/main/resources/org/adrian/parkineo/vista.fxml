<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="700.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.adrian.parkineo.Controlador">
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
    </padding>
    
    <Label text="SIMULADOR DE ESTACIONAMIENTO" style="-fx-font-size: 18; -fx-font-weight: bold;" />
    
    <VBox spacing="8.0" style="-fx-border-color: #cccccc; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Configuración de la Simulación" style="-fx-font-size: 14; -fx-font-weight: bold;" />
        
        <HBox spacing="10.0">
            <Label text="Plazas disponibles:" prefWidth="150.0" />
            <TextField fx:id="plazasField" text="50" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Número de coches:" prefWidth="150.0" />
            <TextField fx:id="cochesField" text="100" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Entradas (hilos):" prefWidth="150.0" />
            <TextField fx:id="entradasField" text="3" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Salidas (hilos):" prefWidth="150.0" />
            <TextField fx:id="salidasField" text="2" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Duración (segundos):" prefWidth="150.0" />
            <TextField fx:id="tiempoField" text="30" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Plazas para eléctricos:" prefWidth="150.0" />
            <TextField fx:id="plazasElectricasField" text="10" prefWidth="100.0" />
        </HBox>
        
        <HBox spacing="10.0">
            <Label text="Plazas para discapacitados:" prefWidth="150.0" />
            <TextField fx:id="plazasDiscapacitadosField" text="5" prefWidth="100.0" />
        </HBox>
    </VBox>
    
    <HBox spacing="10.0">
        <Button fx:id="iniciarButton" onAction="#iniciarSimulacion" text="Iniciar Simulación" style="-fx-font-size: 12; -fx-padding: 10;" prefWidth="200.0" />
        <Button fx:id="listaEsperaButton" onAction="#abrirListaEspera" text="Ver Lista de Espera" style="-fx-font-size: 12; -fx-padding: 10;" prefWidth="200.0" disable="true" />
    </HBox>
    
    <Label text="Estadísticas en Tiempo Real" style="-fx-font-size: 14; -fx-font-weight: bold;" />
    <TextArea fx:id="estadisticasArea" prefHeight="350.0" prefWidth="550.0" wrapText="true" editable="false" style="-fx-font-family: 'Courier New'; -fx-font-size: 11;" />
</VBox>
